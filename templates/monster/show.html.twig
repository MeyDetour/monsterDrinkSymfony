{% extends 'base.html.twig' %}
  {% form_theme form 'bootstrap_5_layout.html.twig'  %}
{% block title %}Hello MonsterController!{% endblock %}

{% block body %}
<div class="showProductContainer">

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ monster.nom }}</h5>
            <p class="card-text">{{ monster.price }}</p>
            <a href="{{ path('app_monster' ) }}" class="btn btn-primary">retour</a>

        </div>
    </div>

    <div class="commentaireContainer">
        <div class=" ">
            {{ form_start(form, {'action': path('create_comment', {'id': monster.id})}) }}
            {{ form_row(form.content) }}
            <button type="submit" class="btn btn-success">poster le commentaire</button>
            {{ form_end(form) }}
        </div>

        <hr>
        <div class="commentaireList">

            {% for commentaire in monster.commentaires %}
                <div class="cardCommentaire">
                    <p>{{ commentaire.content }}</p>
                    <div>
                        <button class="btnDeleteComment"><a href="{{ path('delete_comment',{'id':commentaire.id,'idMonster':monster.id}) }}">Supprimer</a></button>
                    </div>
                </div>
            {% endfor %}

        </div>

    </div>


</div>


{% endblock %}
